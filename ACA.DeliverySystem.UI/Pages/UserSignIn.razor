@page "/signin"
@inherits UserSignInBase

@using ACA.DeliverySystem.UI.Models
@using ACA.DeliverySystem.UI.Services
@inject UserService UserService
@inject NavigationManager NavigationManager

<PageTitle>Enjoy your time</PageTitle>
<h1>Enjoy your time with us.</h1>


<style>
    body {
        background-image: url('https://plus.unsplash.com/premium_photo-1681487843757-8a6d04422652?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }

    .signin-container {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
    }

    h1 {
        margin-bottom: 20px;
        color: cornflowerblue;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

   
    input[type="email"] {
        width: 100%;
        padding: 10px;
        margin - top: 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
    }

    button {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        background-color: #28a745;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }

        button:hover {
            background-color: #218838;
        }

    .create-account {
        margin-top: 20px;
        font-size: 14px;
    }

        .create-account a {
            color: #00bfff; 
            text-decoration: none;
        }

            .create-account a:hover {
                text-decoration: underline;
            }


</style>

<div class="signin-container">
    <EditForm Model="@signInModel" OnValidSubmit="HandleSignIn">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <InputText id="email" @bind-Value="signInModel.Email" placeholder="Email" required />
        <button type="submit">Sign In</button>
    </EditForm>
    <div class="create-account">
        <p>Don't have an account? <a href="/signup">Create one here</a>.</p>
    </div>
</div>




