@page "/signup"
@using Microsoft.AspNetCore.Components.Forms
@using ACA.DeliverySystem.UI.Models
@using ACA.DeliverySystem.UI.Services
@inject UserService UserService
@inject NavigationManager NavigationManager

@code {
    private UserAddModel _userModel = new UserAddModel();
    private string _errorMessage;

    private async Task HandleSubmit()
    {
        var result = await UserService.Create(_userModel);
        if (result.Success)
        {
            // Redirect to a different page or show a success message
            NavigationManager.NavigateTo("/success"); // Example redirection
        }
        else
        {
            _errorMessage = result.ErrorMessage;
        }
    }
}

<PageTitle>Create an Account</PageTitle>

<style>
    body {
        background-image: url('https://static.vecteezy.com/system/resources/previews/018/998/198/original/online-delivery-service-concept-perfect-for-landing-page-delivery-website-banner-and-background-free-vector.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
        
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.5); 
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;

    }

    h1 {
        margin-bottom: 20px;
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        font-size: 16px;
    }

    button {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        background-color: #28a745;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }

        button:hover {
            background-color: #218838;
        }

    .signin-link {
        margin-top: 20px;
        font-size: 14px;
    }

        .signin-link a {
            color: #00bfff; 
            text-decoration: none;
        }

            .signin-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="form-container">
    <h1>Create an Account</h1>
    <EditForm Model="_userModel" OnValidSubmit="HandleSubmit">
        <InputText @bind-Value="_userModel.Name" placeholder="Name" required class="form-control" />
        <InputText @bind-Value="_userModel.SurName" placeholder="SurName" required class="form-control" />
        <InputText @bind-Value="_userModel.Email" placeholder="Email" type="email" required class="form-control" />
        <button type="submit">Sign Up</button>
    </EditForm>
    @if (!string.IsNullOrEmpty(_errorMessage))
    {
            <p style="color: red;">@_errorMessage</p>
    }
    <div class="signin-link">
        <p>Already have an account? <a href="/signin">Sign in here</a>.</p>
    </div>
</div>
