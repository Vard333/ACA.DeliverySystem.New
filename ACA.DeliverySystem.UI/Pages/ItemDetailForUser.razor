@page "/itemDetailForUser/{itemId:int}/{orderId:int}"
@inherits ItemDetailForUserBase

<PageTitle>Item Details</PageTitle>



<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
    @if (item == null)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <MudGrid>
            <!-- Left Side: Image -->
            <MudItem xs="12" md="6">
    <MudCard Class="pa-2" Style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <MudCardMedia Image="@item.ImageUrl" Alt="Item Image" Style="height: 500px; width: 100%; object-fit: contain; border-radius: 8px;" />
    </MudCard>
</MudItem>

            <!-- Right Side: Details -->
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h4">@item.Name</MudText>
                    <MudDivider Class="mb-3" />
                    <MudText Typo="Typo.body1">@item.Description</MudText>
                    <MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-2">@item.Price.ToString("C")</MudText>

                    <MudGrid Class="mt-4">
                        <MudItem xs="6">
                            <MudButton FullWidth="true" OnClick="OrderItem" Color="Color.Success">Order Now</MudButton>
                        </MudItem>
                        <MudItem xs="6">
                            <MudButton FullWidth="true" OnClick="GoBack" Color="Color.Secondary">Go Back</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
    }
</MudContainer>





